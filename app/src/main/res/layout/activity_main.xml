<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <TextView
        android:id="@+id/game_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tic Tac Toe"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/game_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player X's Turn"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="#666666"
        android:layout_below="@id/game_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <!-- Player 1 Section -->
    <TextView
        android:id="@+id/player1_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player One (X)"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_below="@id/game_status"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/player1_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:layout_below="@id/player1_label"
        android:layout_alignStart="@id/player1_label"
        android:layout_marginTop="4dp" />

    <!-- Player 2 Section -->
    <TextView
        android:id="@+id/player2_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player Two (O)"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_below="@id/game_status"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/player2_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FF0900"
        android:layout_below="@id/player2_label"
        android:layout_alignEnd="@id/player2_label"
        android:layout_marginTop="4dp" />


    <!-- Tic-Tac-Toe Grid -->
    <GridLayout
        android:id="@+id/tic_tac_toe_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_centerInParent="true"
        android:padding="8dp">

        <!-- 9 Buttons for the grid -->
        <Button
            android:id="@+id/button_00"
            android:layout_width="100dp"
            android:contentDescription="Button 00"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:background="#E0E0E0"
            android:text=""
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_01"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:background="#E0E0E0"
            android:text=""
            android:contentDescription="Button 01"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_02"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:background="#E0E0E0"
            android:text=""
            android:contentDescription="Button 02"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_10"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:contentDescription="Button 10"
            android:background="#E0E0E0"
            android:text=""/>

        <Button
            android:id="@+id/button_11"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:background="#E0E0E0"
            android:contentDescription="Button 11"
            android:text=""
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_12"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:background="#E0E0E0"
            android:contentDescription="Button 12"
            android:text=""
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_20"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:background="#E0E0E0"
            android:contentDescription="Button 20"
            android:text=""
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_21"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:background="#E0E0E0"
            android:contentDescription="Button 21"
            android:text=""
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_22"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:background="#E0E0E0"
            android:contentDescription="Button 22"
            android:text=""
            android:textSize="24sp" />

    </GridLayout>

    <!-- Restart Button -->
    <Button
        android:id="@+id/restart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restart Game"
        android:background="#6200EE"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

</RelativeLayout>
